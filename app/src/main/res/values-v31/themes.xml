<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.TajMahal" parent="Base.Theme.TajMahal">
        <item name="android:windowSplashScreenBackground">@color/red</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@color/red</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar">
        <!-- Apply the background drawable -->
        <item name="android:progressDrawable">@drawable/ratingbar_background</item>
        <!-- Adjust size if necessary -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>